{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/payments/create-url": {
            "get": {
                "description": "Generate a VNPAY payment URL for a booking",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payments"
                ],
                "summary": "Create Payment URL",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Booking ID",
                        "name": "booking_id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "payment_url",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "400": {
                        "description": "error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/payments/vnpay-return": {
            "get": {
                "description": "Handle VNPAY return callback after payment",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payments"
                ],
                "summary": "VNPAY Return",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Amount",
                        "name": "vnp_Amount",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Transaction Ref",
                        "name": "vnp_TxnRef",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Response Code",
                        "name": "vnp_ResponseCode",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Secure Hash",
                        "name": "vnp_SecureHash",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Redirect to success/failure page",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}